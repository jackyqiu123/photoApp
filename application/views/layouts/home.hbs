<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/stylesheets/style.css">
    <script type="text/javascript" defer src="/public/javascripts/formValidation.js"></script>
    <script type="text/javascript" defer src="/public/javascripts/homePage.js"></script>

    <title>{{title}}</title>
</head>

<body>
    <div>
        {{{body}}}
    </div>
    {{#if logged}}
    <script>
        let logOut = document.getElementById("logOut");
        if (logOut) {
            logOut.onclick = (event) => {
                fetch("users/logout", {
                    method: "POST"
                })
                .then(data => {
                    location.replace("/login")
                })
            }
        }
    </script>
    {{/if}}

</body>

</html>